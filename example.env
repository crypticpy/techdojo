# Standard OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HOST=0.0.0.0

# Application Settings
DEBUG=False
MAX_TOKENS=3000
TEMPERATURE=0.7

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5 MB in bytes

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=pdf,docx,txt

# Language Options (comma-separated)
LANGUAGE_OPTIONS=English,Spanish,French,German,Japanese,Chinese

# Consistency Options (comma-separated)
CONSISTENCY_OPTIONS=Standardized Terminology,Consistent Formatting,Consistent Style

# Other API Keys (if needed in the future)
# OTHER_API_KEY=your_other_api_key_here

# Database Configuration (if you decide to add a database later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=kbdojo
# DB_USER=your_db_username
# DB_PASSWORD=your_db_password

# Security Settings
# SECRET_KEY=your-secret-key-for-session-management

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=kbdojo.log